<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Apice - Vagas</title>
  <link rel="stylesheet" href="/css/vagas.css">
  <style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
 </style>
</head>
<body>
  <header>
    <%- include('../partials/menu') %>
  </header>
  <main>
    <section class="vagas-header">
        <article style="padding: 20px 25px;">
            <nav style="display: flex; align-items: center; margin-bottom: 8px;">
                <img src="/img/mala.svg" alt="">
                <h1 style="font-family: 'Montserrat', sans-serif; font-size: 22px; font-weight: 600; color: #FFC52D; margin: 0; margin-left: 8px;">VAGAS</h1>
            </nav>
            
            <p style="font-family: 'Poppins', sans-serif; font-size: 14px; color: #333; margin: 0 0 15px 0;">Pesquise e encontre sua vaga ideal!</p>
            
            <form style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
                <fieldset style="position: relative; flex-grow: 1; margin-right: 10px; border: none; padding: 0;">
                    <input type="text" placeholder="Pesquise e encontre sua vaga ideal!" 
                        style="width: 100%; height: 42px; padding: 0 40px 0 15px; border: 1px solid #ccc; border-radius: 50px; font-family: 'Poppins', sans-serif; font-size: 14px; color: #333; outline: none;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#333" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" 
                        style="position: absolute; right: 15px; top: 50%; transform: translateY(-50%);">
                        <circle cx="11" cy="11" r="8"></circle>
                        <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                    </svg>
                </fieldset>
                <button id="btnMostrarFiltro" style="background: none; border: none; padding: 0; margin: 0; font-size: 20px; color: #160B5D; display: flex; align-items: center; justify-content: center; width: 42px; height: 42px; cursor: pointer;">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="none" viewBox="0 0 16 16" stroke="#160B5D" stroke-width="1.5">
                        <path d="M1.5 3a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 0 1h-13a.5.5 0 0 1-.5-.5zm0 4a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5z"/>
                    </svg>
                </button>
            </form>
        </article>
    </section>

    <section class="filter-wrapper">
        <aside class="filter-box" id="filterBox">
  <nav class="filter-header">
    <span class="clear-filters" id="limparFiltros">
      <img src="/img/filtro2.png">
      Limpar Filtros
    </span>
    <button type="button" class="close-btn">&times;</button>
  </nav>

  <fieldset class="filter-local">
    <input type="text" placeholder="Locais">
  </fieldset>

  <fieldset class="filter-group">
    <legend class="filter-title">Tipos de vaga</legend>
    <nav class="filter-options">
      <input type="radio" id="presencial" name="tipo-presencial" value="presencial" />
      <label for="presencial">Presencial</label>
      <input type="radio" id="hibrido" name="tipo-hibrido" value="hibrido" />
      <label for="hibrido">Híbrido</label>
      <input type="radio" id="remoto" name="tipo-remoto" value="remoto" />
      <label for="remoto">Remoto</label>
    </nav>

    <br>

    <legend class="filter-title">Tipos de vagas</legend>
    <nav class="checkbox-options">
      <input type="checkbox" id="jovem-aprendiz" name="jovem-aprendiz" value="jovem-aprendiz" />
      <label for="jovem-aprendiz">Jovem Aprendiz</label>

      <input type="checkbox" id="estagio" name="estagio" value="estagio" />
      <label for="estagio">Estágio</label>

      <input type="checkbox" id="trainee" name="trainee" value="trainee" />
      <label for="trainee">Trainee</label>
    </nav>

  </fieldset>
        </aside>

<section class="jobs-container">
  <% if (vagas && Object.keys(vagas).length) { %>
    <% Object.values(vagas).forEach(function(vaga) { %>
      <%- include('../partials/job-card', { vaga: vaga }) %>
    <% }) %>
  <% } else { %>
    <p>Nenhuma vaga encontrada.</p>
  <% } %>
</section>
  </section>
    </main>
    <script src="/js/script.js"></script>
    <script src="/js/filtros.js"></script>
    
    <%- include('../partials/footer') %>    
</body>