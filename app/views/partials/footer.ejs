<style>
.footer-apice {
  background: #160B5D;
  color: white;
  padding: 40px 24px;
  font-family: 'Poppins', sans-serif;
  width: 100%;
  box-sizing: border-box;
  border-radius: 15px 15px 0 0 ;
}

.footer-container, section.footer-container {
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}

.footer-sections-row, article.footer-sections-row {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  gap: 60px;
  margin-bottom: 30px;
}

.footer-title {
  color: #FFC52D;
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 16px;
}

.footer-section {
  flex: 0 1 auto;
}

.footer-links {
  list-style: none;
  padding: 0,5rem;
  margin: 0;
}

.footer-links li {
  margin-bottom: 12px;
}

.footer-links a {
  color: white;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 400;
}

.footer-links a:hover {
  color: #FFC52D;
}

.footer-social, nav.footer-social {
  display: flex;
  gap: 20px;
  margin-top: 16px;
  flex-wrap: wrap;
}

.footer-social a, nav.footer-social a {
  display: inline-flex;
}

.social-section {
  align-self: flex-start;
}

.footer-social img {
  width: 28px;
  height: 28px;
}

/* Responsividade para telas menores */
@media (max-width: 768px) {
  .footer-sections-row, article.footer-sections-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 30px 20px;
    justify-content: space-between;
  }
  
  .footer-section {
    width: 100%;
  }
}

/* Para telas muito pequenas - mantendo layout 2x2 */
@media (max-width: 480px) {
  .footer-sections-row, article.footer-sections-row {
    grid-template-columns: 1fr 1fr;
    gap: 20px 15px;
  }
  
  .footer-title {
    font-size: 1rem;
  }
  
  .footer-links a {
    font-size: 0.9rem;
  }
  
  .footer-social, nav.footer-social {
    display: flex;
    gap: 15px;
    justify-content: flex-start;
  }
  
  .footer-social img, nav.footer-social img {
    width: 24px;
    height: 24px;
  }
}

</style>

