<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil Profissional</title>
    <link rel="stylesheet" href="/css/perfil.css">
</head>
<body>
    <header>
        <%- include('../partials/menu') %>
    </header>
<main>
    <nav class="profile-container">
        <header class="profile-header">
            <% if (profileImage) { %>
                <img src="<%= profileImage %>" alt="Foto de perfil" class="profile-pic">
            <% } else { %>
                <img src="/img/default-profile.png" alt="Foto padrão" class="profile-pic">
            <% } %>
        </header>

        <form action="/upload-profile" method="POST" enctype="multipart/form-data" class="upload-section">
            <input type="file" name="profileImage" accept="image/*" id="profileImage" style="display: none;">
            <button type="button" class="upload-btn" onclick="document.getElementById('profileImage').click()">
                Alterar foto de perfil
            </button>
            <button type="submit" class="upload-btn" style="margin-left: 10px;">Salvar foto</button>
        </form>

        <section class="section">
            <header class="profile-info">
                <h1><%= user.informacoesPessoais.nome %></h1>
            </header>
            <br>
            <dl class="info-grid">
                <section class="info-item">
                    <dt>Idade</dt>
                    <dd><%= user.informacoesPessoais.idade %></dd>
                </section>
                <section class="info-item">
                    <dt>Curso</dt>
                    <dd><%= user.formacaoAcademica.curso %></dd>
                </section>
                <section class="info-item">
                    <dt>Gênero</dt>
                    <dd>Feminino</dd>
                </section>
                <section class="info-item">
                    <dt>Estado Civil</dt>
                    <dd>Solteira</dd>
                </section>
                <section class="info-item">
                    <dt>Endereço</dt>
                    <dd>Rua Francisco Marques, Vila Formosa</dd>
                </section>
                <section class="info-item">
                    <dt>CEP</dt>
                    <dd>14400-342</dd>
                </section>
            </dl>
        </section>

        <section class="section">
            <h2>Formação Acadêmica</h2>
            <dl class="info-grid">
                <section class="info-item">
                    <dt>Curso</dt>
                    <dd>Matemática Computacional</dd>
                </section>
                <section class="info-item">
                    <dt>Instituição</dt>
                    <dd>UNESP</dd>
                </section>
                <section class="info-item">
                    <dt>Ano de Formação</dt>
                    <dd>2023</dd>
                </section>
            </dl>
        </section>

        <section class="section">
            <h2>Experiência</h2>
            <dl class="info-grid">
                <section class="info-item">
                    <dt>Cargo</dt>
                    <dd>Assistente</dd>
                </section>
                <section class="info-item">
                    <dt>Empresa</dt>
                    <dd>DataSmart</dd>
                </section>
                <section class="info-item">
                    <dt>Período</dt>
                    <dd>2022 - Presente</dd>
                </section>
            </dl>
        </section>

        <section class="section">
            <h2>Habilidades</h2>
            <ul class="skills-list">
                <li class="skill-tag">Python</li>
                <li class="skill-tag">SQL</li>
                <li class="skill-tag">Análise de Dados</li>
                <li class="skill-tag">Machine Learning</li>
            </ul>
        </section>
    </nav>
    </main>
    

    <script>
        document.getElementById('profileImage').addEventListener('change', function() {
            if (this.files && this.files[0]) {
                document.querySelector('form').submit();
            }
        });
    </script>
    <script src="/js/script.js" defer></script>
    <%- include('../partials/footer') %>
</body>
</html>
