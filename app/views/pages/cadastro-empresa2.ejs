  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const empresaValidator2 = initFormValidation('empresaForm2');
      
      // Botão anterior
      document.getElementById('btnAnterior').addEventListener('click', function() {
        window.location.href = '/cadastro-empresa';
      });
      
      // Botão próximo com validação
      document.getElementById('btnProximo').addEventListener('click', function(e) {
        e.preventDefault();
        if (empresaValidator2.validateForm()) {
          // Se validação passou, ir para próxima página
          window.location.href = '/cadastro-empresa3';
        }
      });
      
      // Função para remover formatação antes do envio
      function digits(value) {
        return (value || '').replace(/\D/g, '');
      }

      const form = document.getElementById('empresaForm2');
      if (form) {
        form.addEventListener('submit', function (e) {
          const telefoneInput = form.querySelector('#telefone');
          if (telefoneInput) {
            telefoneInput.value = digits(telefoneInput.value);
          }
        }, { capture: true });
      }
    });
  </script>

